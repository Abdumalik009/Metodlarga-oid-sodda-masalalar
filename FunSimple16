package FunSimple;
import java.util.Scanner;

public class FunSImple16 {

        public static void main(String[] args) {
            Scanner scanner = new Scanner(System.in);

            System.out.print("a ni kiriting: ");
            double a = scanner.nextDouble();

            System.out.print("b ni kiriting: ");
            double b = scanner.nextDouble();

            int resultA = ishora(a);
            int resultB = ishora(b);

            System.out.println("Ishora(a): " + resultA);
            System.out.println("Ishora(b): " + resultB);
            System.out.println("Ishora(a) + Ishora(b): " + (resultA + resultB));
        }

        static int ishora(double x) {
            if (x < 0) {
                return -1;
            } else if (x > 0) {
                return 1;
            } else {
                return 0;
            }
        }
    }


